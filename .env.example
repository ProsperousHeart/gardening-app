# Django Configuration
# Copy this file to .env and update with your actual values
# Never commit .env to version control

# Django Secret Key (REQUIRED for production)
# Generate a new one with: python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'
DJANGO_SECRET_KEY=your-secret-key-here

# Debug mode (Default: True in development, False in production)
# Set to False in production!
DEBUG=True

# Database Configuration (if needed)
# DATABASE_URL=sqlite:///db.sqlite3

# Allowed Hosts (comma-separated, required when DEBUG=False)
# ALLOWED_HOSTS=localhost,127.0.0.1,yourdomain.com

# Email Configuration (if needed)
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your-email@example.com
# EMAIL_HOST_PASSWORD=your-email-password

# Third-party API Keys (examples)
# WEATHER_API_KEY=your-weather-api-key
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
